{
  "manifest_version": 2,
  "name": "Save tabs to clipboard",
  "version": "0.1",
  "browser_action": {
    "default_icon": {
      "19": "assets/blue-icon.svg",
      "38": "assets/blue-icon.svg"
    },
    "default_popup": "html/popup.html",
    "default_title": "Save all tabs to clipboard"
  },
  "icons": {
    "48": "assets/icon.svg",
    "96": "assets/icon.svg"
  },
  "permissions": ["tabs", "clipboardRead"],
  "optional_permissions": [
    "clipboardWrite",
    "clipboardRead",
    "clipboard-write"
  ],
  "content_security_policy": "script-src 'self' https://buttons.github.io; object-src 'none';"
}
